<div class="container" style="max-width: 600px;">
  <h1 class="font-weight-normal mb-4">掲示板の投稿を編集</h1>

  <% if @post.errors.any? %>
    <div class="alert alert-danger">
      <%= @post.errors.count %>件のエラーが発生しました
      <% @post.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <%= form_with model: @post, url: board_post_path(@post), method: :patch, local: true, html: { multipart: true } do |f| %>
    <div class="mb-3">
      <%= f.label :location, "題名", class: "form-label" %>
      <%= f.text_field :location, class: "form-control", placeholder: "例：体重が減らない" %>
    </div>

    <div class="mb-3">
      <%= f.label :text, "相談内容", class: "form-label" %>
      <%= f.text_area :text, rows: 6, class: "form-control", placeholder: "例：食事のアドバイスが欲しい" %>
    </div>

    <div class="mb-3">
      <%= f.label :image, "画像", class: "form-label" %>
      <%= f.file_field :image, class: "form-control", accept: "image/*" %>
      <% if @post.image.attached? %>
        <p class="small text-muted mt-1">現在の画像：<%= image_tag @post.image.variant(resize_to_limit: [100, 100]) %></p>
      <% end %>
    </div>

    <div class="mt-4">
      <%= f.submit "更新する", class: "btn btn-primary" %>
      <%= link_to "キャンセル", board_post_path(@post), class: "btn btn-outline-secondary ms-2" %>
    </div>
  <% end %>
</div>
