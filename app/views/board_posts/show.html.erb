<div class="container">
  <div class="row mt-5">
    <h1 class="font-weight-normal">掲示板の投稿</h1>
  </div>

  <div class="row mt-4">
    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start">
            <p class="card-text font-weight-bold mb-0"><%= @post.user.name %></p>
            <% if @post.user_id == current_user.id %>
              <%= link_to "編集", edit_board_post_path(@post), class: "btn btn-sm btn-outline-primary me-1" %>
              <%= link_to "削除", board_post_path(@post), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger" %>
            <% end %>
          </div>
          <p class="card-text mt-2"><%= simple_format(@post.text) %></p>
        </div>
      </div>

      <div class="comments">
        <h5 class="mb-3">コメント</h5>

        <%= form_with(model: [@post, @comment], url: board_post_comments_path(@post), local: true) do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, rows: 3, class: "form-control", placeholder: "コメントを書く" %>
          </div>
          <%= f.submit "送信する", class: "btn btn-success mb-3" %>
        <% end %>

        <p>コメント件数：<%= @comments.count %></p>
        <% @comments.each do |comment| %>
          <div class="mb-2">
            <strong><%= comment.user.name %></strong>
            <span class="text-muted"><%= comment.created_at.strftime('%Y/%m/%d %H:%M') %></span><br>
            <div class="d-flex">
              <p class="mb-0"><%= comment.comment %></p>
              <% if comment.user == current_user %>
                <%= link_to "削除", board_post_comment_path(@post, comment), data: { turbo_method: :delete }, class: "btn btn-sm btn-danger ml-2" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <p class="mt-3">
    <%= link_to "掲示板一覧へ", board_posts_path, class: "btn btn-outline-secondary" %>
  </p>
</div>
