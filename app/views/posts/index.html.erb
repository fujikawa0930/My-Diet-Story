<div class="container d-flex flex-column align-items-center">
  <div class="row mt-5">
    <h1 class="font-weight-normal"><%= @my_posts ? '投稿一覧' : '掲示板一覧' %></h1>
  </div>
  <% if !@my_posts && user_signed_in? %>
    <p class="mb-3"><%= link_to '掲示板に投稿する', new_post_path(from: 'board'), class: 'btn btn-primary' %></p>
  <% end %>
  <%= render 'index', posts: @posts, search_path: @my_posts ? my_posts_posts_path : posts_path, my_posts: @my_posts %>
  <% if @my_posts %>
    <p class="mt-3"><%= link_to '掲示板一覧へ', posts_path, class: 'btn btn-outline-secondary' %></p>
  <% end %>
</div>