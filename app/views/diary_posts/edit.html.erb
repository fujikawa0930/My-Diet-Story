<div class="container" style="max-width: 600px;">
  <h1 class="font-weight-normal mb-4">投稿を編集</h1>

  <% if @post.errors.any? %>
    <div class="alert alert-danger">
      <%= @post.errors.count %>件のエラーが発生しました
      <% @post.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <%= form_with model: @post, url: diary_post_path(@post), method: :patch, local: true, html: { multipart: true } do |f| %>
    <div class="mb-3">
      <%= f.label :location, "やったこと", class: "form-label" %>
      <%= f.text_field :location, class: "form-control", placeholder: "例：運動" %>
    </div>

    <div class="mb-3">
      <%= f.label :text, "感想", class: "form-label" %>
      <%= f.text_area :text, rows: 6, class: "form-control", placeholder: "例：ピラティスに入会した" %>
    </div>

    <div class="mb-3">
      <%= f.label :image, "画像", class: "form-label" %>
      <%= f.file_field :image, class: "form-control", accept: "image/*" %>
      <% if @post.image.attached? %>
        <p class="small text-muted mt-1">現在の画像：<%= image_tag @post.image.variant(resize_to_limit: [100, 100]) %></p>
      <% end %>
    </div>

    <div class="mt-4">
      <%= f.submit "更新する", class: "btn btn-primary" %>
      <%= link_to "キャンセル", diary_post_path(@post), class: "btn btn-outline-secondary ms-2" %>
    </div>
  <% end %>
</div>
