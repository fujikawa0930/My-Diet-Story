<div class="container list-page">
  <div class="row mt-5">
    <h1 class="font-weight-normal">投稿詳細</h1>
  </div>
  <div class="row mt-4">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <p class="font-weight-bold"><%= @post.location %></p>
          <% if @post.image.attached? %>
            <%= image_tag @post.image.variant(resize_to_limit: [600, 400]), class: "img-fluid mb-3" %>
          <% end %>
          <p class="card-text"><%= simple_format(@post.text) %></p>
        </div>
      </div>
      <div class="mt-3">
        <%= link_to "投稿一覧へ", diary_posts_path, class: "btn btn-outline-secondary" %>
        <%= link_to "編集", edit_diary_post_path(@post), class: "btn btn-outline-primary" %>
        <%= link_to "削除", diary_post_path(@post), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
