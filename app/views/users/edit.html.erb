<div class="cover-user-edit">
  <div class="container d-flex flex-column align-items-center">
    <div class="row mt-5">
      <h1 class="font-weight-normal">プロフィール編集</h1>
    </div>
    <div class="row mt-5">
      <%= form_with model: @user, local:true do |f| %>
        <div class="form-group">
          <label class="form-label">名前</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control" %>
        </div>
        <div class="form-group">
          <label class="form-label">プロフィール画像</label><br>
          <div class="profile-image-preview mb-3">
            <% if @user.profile_image.attached? %>
              <%= image_tag @user.profile_image, size: '100x100', class: "profile-img profile-img--round" %>
            <% else %>
              <%= image_tag "user_placeholder.svg", size: '100x100', class: "profile-img profile-img--round" %>
            <% end %>
          </div>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <label class="form-label">プロフィール</label>
          <%= f.text_field :profile, class: "form-control" %><br>
        </div>
        <%= f.submit '保存する', class: "btn btn-success" %>
        <p class="mt-4"><%= link_to "掲示板一覧へ戻る", board_posts_path, class: "btn btn-outline-secondary" %></p>
      <% end %>
    </div>
    <p class="mt-3">
      <%= link_to "退会する", user_registration_path, data: { turbo_method: :delete, turbo_confirm: "本当に退会しますか？" }, class: "btn btn-danger" %>
    </p>
  </div>
</div>